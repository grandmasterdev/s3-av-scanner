{
  "name": "s3-av-scanner",
  "version": "0.1.0",
  "bin": {
    "s3-av-scanner": "bin/s3-av-scanner.js"
  },
  "scripts": {
    "start": "node ./dist/scanner/index.js",
    "build-api": "esbuild ./src/scanner/index.ts --platform=node --bundle --outfile=dist/scanner/index.js",
    "build-agent": "esbuild ./src/lambda/index.ts --external:aws-sdk --platform=node --bundle --outfile=dist/lambda/index.js",
    "build": "npm run build-api & npm run build-agent",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.104",
    "@types/clamscan": "^2.0.2",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/multer": "^1.4.7",
    "@types/node": "18.7.18",
    "@types/prettier": "2.7.0",
    "@types/rimraf": "^3.0.2",
    "aws-cdk": "2.43.0",
    "aws-cdk-config-builder": "^1.1.4",
    "aws-sdk": "^2.1222.0",
    "esbuild": "^0.15.9",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.171.0",
    "@aws-sdk/client-sqs": "^3.171.0",
    "@types/request": "^2.48.8",
    "aws-cdk-lib": "2.43.0",
    "binary": "^0.3.0",
    "clamscan": "^2.1.2",
    "constructs": "^10.1.110",
    "express": "^4.18.1",
    "multer": "^1.4.5-lts.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21"
  }
}
