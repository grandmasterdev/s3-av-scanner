{
  "name": "s3-av-scanner",
  "version": "0.1.0",
  "bin": {
    "s3-av-scanner": "bin/s3-av-scanner.js"
  },
  "scripts": {
    "start": "node ./dist/scanner/index.js",
    "build-api": "esbuild ./src/scanner/index.ts --platform=node --bundle --outfile=dist/scanner/index.js",
    "build-agent": "esbuild ./src/lambda/index.ts --external:aws-sdk --platform=node --bundle --outfile=dist/lambda/index.js",
    "build": "npm run build-api & npm run build-worker",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.104",
    "@types/clamscan": "^2.0.2",
    "@types/express": "^4.17.14",
    "@types/jest": "^27.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "10.17.27",
    "@types/prettier": "2.6.0",
    "@types/rimraf": "^3.0.2",
    "aws-cdk": "2.41.0",
    "aws-sdk": "^2.1220.0",
    "esbuild": "^0.15.8",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.171.0",
    "@aws-sdk/client-sqs": "^3.171.0",
    "@types/request": "^2.48.8",
    "aws-cdk-lib": "2.41.0",
    "binary": "^0.3.0",
    "cdk-serverless-clamscan": "^2.4.22",
    "clamscan": "^2.1.2",
    "constructs": "^10.0.0",
    "express": "^4.18.1",
    "multer": "^1.4.5-lts.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21"
  }
}
